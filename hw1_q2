#include <stdio.h>

int main() {
        float num1;
        float num2;
        char op;

        printf("Please enter a real number expression: ");
        scanf("%f %c %f", &num1, &op, &num2);

        printf("Operand 1: %.2f\n", num1);
        printf("Operand 2: %.2f\n", num2);
        printf("Operation: %c\n", op);

}
